# -----------------------------
# DATABASE CONFIGURATION
# -----------------------------
DB_DIALECT=sqlite          # Change to mysql, postgres, or mariadb if needed
DB_HOST=127.0.0.1          # Database host (ignored for SQLite)
DB_PORT=3306               # Database port (default 5432 for Postgres, 3306 for MySQL)
DB_NAME=my_database        # Database name
DB_USER=root               # Database username
DB_PASS=secret             # Database password
DB_STORAGE=./database.sqlite # SQLite storage file (only for SQLite)

# -----------------------------
# SERVER CONFIGURATION
# -----------------------------
PORT=3000                  # Express server port
NODE_ENV=development        # development | production

# -----------------------------
# JWT CONFIGURATION
# -----------------------------
JWT_SECRET=your_jwt_secret  # Secret key for signing JWT tokens
JWT_EXPIRATION=1h          # Expiration time for tokens (e.g., 1h, 7d)

# -----------------------------
# EMAIL CONFIGURATION (for notifications)
# -----------------------------
EMAIL_HOST=smtp.example.com # SMTP server
EMAIL_PORT=587              # SMTP port (465 for SSL, 587 for TLS)
EMAIL_USER=your_email@example.com # Email username
EMAIL_PASS=your_email_password   # Email password
EMAIL_FROM=no-reply@example.com  # Default sender email

# -----------------------------
# CLOUD STORAGE (Example: Cloudinary, AWS S3, Firebase)
# -----------------------------
STORAGE_PROVIDER=cloudinary # cloudinary | s3 | firebase
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_BUCKET_NAME=your_s3_bucket

FIREBASE_STORAGE_BUCKET=your_firebase_bucket

# -----------------------------
# WEBSOCKETS CONFIGURATION
# -----------------------------
SOCKET_PORT=3001            # WebSocket server port (if different from Express)
SOCKET_CORS_ORIGIN=*        # Allowed origins for WebSockets

# -----------------------------
# LOGGING & DEBUGGING
# -----------------------------
LOG_LEVEL=info              # Log level (debug, info, warn, error)
DEBUG=false                 # Enable debugging mode
